<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

                <Label text="Purchase Price:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="price" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="unit price" editable="false"/>

                <Label text="Retail Price:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="mrp" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="unit price" editable="false"/>

                <Label text="AMT/QTY*:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="stock" GridPane.columnIndex="1" GridPane.rowIndex="5" promptText="10(for kg)/10.500(for kg)/10(for units)" editable="false"/>

                <Label fx:id="title" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2" scaleY="2" scaleX="2"/>
                <Button fx:id="deleteBtn" alignment="CENTER_RIGHT" text="delete this item" GridPane.columnIndex="0" GridPane.rowIndex="9"/>

                <Label GridPane.rowIndex="1"/>
                <Label GridPane.rowIndex="8"/>

                <Label text="Category*:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="cat" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Category" editable="false"/>

                <Label text="Item Type*:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="itemType" GridPane.columnIndex="1" GridPane.rowIndex="6" promptText="item type" editable="false"/>

                <Button  fx:id="updateItemBtn" text="Update" GridPane.columnIndex="1" GridPane.rowIndex="7" prefWidth="350"/>
            </GridPane>
        </center>
    </BorderPane>

</AnchorPane>
