<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <GridPane alignment="CENTER" hgap="20">
                <padding><Insets top="35" right="25" left="25"/></padding>
                <Label text="Add New Order" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" scaleY="2" scaleX="2"/>
            </GridPane>
        </top>
        <center>
            <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">


                <Label text="Order Title*:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="order_title" GridPane.columnIndex="1" GridPane.rowIndex="0"  promptText="Enter order title"/>


                <Button  fx:id="insertNewOrderBtn" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250"/>
                <Text fx:id="warning" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>
        </center>
    </BorderPane>

</AnchorPane>
