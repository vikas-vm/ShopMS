<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <GridPane alignment="CENTER" hgap="20">
                <padding><Insets top="35" right="25" left="25"/></padding>
                <Label text="Add New Category" GridPane.columnIndex="0" GridPane.rowIndex="0"
                      GridPane.columnSpan="2" scaleY="2" scaleX="2"/>
            </GridPane>
        </top>
        <center>
            <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

                <Label text="Category*:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="category" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="enter category name"/>

                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextArea fx:id="description" GridPane.columnIndex="1" GridPane.rowIndex="4" prefRowCount="5" prefColumnCount="20" promptText="enter category description"/>

                <Button  fx:id="insertCategoryBtn" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="300"/>

            </GridPane>
        </center>
    </BorderPane>

</AnchorPane>
