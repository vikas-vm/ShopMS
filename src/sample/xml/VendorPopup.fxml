<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <GridPane alignment="CENTER" hgap="20">
                <padding><Insets top="35" right="25" left="25"/></padding>
                <Label text="Add Vendor Details" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" scaleY="2" scaleX="2"/>
            </GridPane>
        </top>
        <center>
            <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

                <Label text="Title*:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="title" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter vendor title"/>

                <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="contact" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter vendor phone number"/>

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Enter vendor Email"/>

                <Label text="City*:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="city" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Enter City"/>

                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextArea fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="4" prefRowCount="5" prefColumnCount="25" promptText="Enter vendor Address"/>

                <Button  fx:id="insertVendorBtn" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="400"/>
                <Text fx:id="vendor_warning" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            </GridPane>
        </center>
    </BorderPane>

</AnchorPane>
